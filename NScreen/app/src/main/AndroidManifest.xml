        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>
        <activity
            android:name=".epg.EpgMainActivity"
            android:label="@string/title_activity_epg_main" >

        </activity>
        <activity
            android:name=".epg.EpgSubActivity"
            android:label="@string/title_activity_detail_channel" >

        </activity>
        <activity android:name=".pvr.PvrMainActivity">

        </activity>
        <activity android:name=".pvr.PvrSubActivity">

        </activity>
        <activity android:name=".epg.EpgChoiceActivity"
            android:screenOrientation = "unspecified"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|keyboardHidden">

        </activity>
        <activity android:name=".my.MyMainActivity">

        </activity>
        <activity android:name=".my.MySubActivity">

        </activity>
        <activity android:name=".search.SearchMainActivity">
            
        </activity>
    </application>

</manifest>
