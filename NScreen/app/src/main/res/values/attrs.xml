<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CMActionBar">
        <attr name="actionbar_style">
            <flag name="empty" value="0x00" />	<!-- 타이틀만 -->
            <flag name="back" value="0x01" />	<!-- 좌측 백버튼만 -->
            <flag name="close" value="0x02" /> <!-- 우측 닫기 버튼만  -->
            <flag name="main" value="0x03" /> <!-- 메인에서 사용될 좌측 전체 메뉴, 타이틀 이미지, 우측 검색버튼 -->
        </attr>
        <attr name="actionbar_title" format="string" />
    </declare-styleable>
</resources>