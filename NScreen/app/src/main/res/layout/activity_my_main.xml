<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="56.25dp"
        android:background="@mipmap/title_bar_bg">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="116dp"
            android:layout_height="30.25dp"
            android:layout_marginTop="9.75dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_selector"
            android:text="VOD찜목록"
            android:textColor="@drawable/btn_selector_textcolor"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="116dp"
            android:layout_height="30.25dp"
            android:layout_marginTop="9.75dp"
            android:background="@drawable/btn_selector"
            android:text="VOD시청목록"
            android:textColor="@drawable/btn_selector_textcolor" />

        <Button
            android:id="@+id/button3"
            android:layout_width="116dp"
            android:layout_height="30.25dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="9.75dp"
            android:background="@drawable/btn_selector"
            android:text="VOD구매목록"
            android:textColor="@drawable/btn_selector_textcolor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31.75dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.25dp"
            android:layout_gravity="center_horizontal"
            android:text="총 19개의 찜 VOD가 있습니다."
            android:textColor="#7b5aa3"
            android:textSize="11.5sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/my_main_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>