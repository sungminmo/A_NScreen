<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="58dp">

    <TextView
        android:id="@+id/pvr_main_textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09.14 (월)"/>

    <TextView
        android:id="@+id/pvr_main_textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:19"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="19.25dp"
        android:id="@+id/epg_main_imagebutton_channel_logo"
        android:layout_marginLeft="39.75dp"
        android:layout_marginBottom="8.75dp"
        android:background="#aaaaaa"
        android:layout_gravity="bottom" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="전국 노래자랑 광진구편 초대가수 임석원 사회 송해"
        android:id="@+id/epg_main_textview_program_title"
        android:textSize="14.5sp"
        android:textColor="#000000"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8.75dp"
        android:layout_marginRight="30dp"
        android:ellipsize="end"
        android:lines="1" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2.25dp"
        android:id="@+id/epg_main_imageview_progress_bg"
        android:background="@drawable/progress_bg"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="9.75dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2.25dp"
        android:id="@+id/epg_main_imageview_progress_curent"
        android:background="@drawable/progress_bar"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="200dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="9.75dp" />

</FrameLayout>