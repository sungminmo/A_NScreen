<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <View android:layout_width="match_parent" android:layout_height="78.25dp" />

    <TextView
        android:id="@+id/pvr_main_textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:text="09.14 (ì›”)"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pvr_main_textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left|top"
        android:text="13:19"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pvr_main_pvr"
        android:layout_gravity="left|top"
        android:background="@mipmap/icon_record"
        android:layout_marginTop="11.5dp"
        android:layout_marginLeft="154.25dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/pvr_main_textview_program_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:gravity="center_vertical"
        android:textSize="14.5sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:lines="1"
        android:autoText="false"
        android:layout_marginLeft="154.25dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/pvr_main_imagebutton_channel_logo"
        android:layout_width="48dp"
        android:layout_height="19.25dp"
        android:layout_marginLeft="88.25dp"
        android:layout_gravity="left|top"
        android:background="#d1d1d1"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pvr_main_imageview_series"
        android:layout_gravity="left|center_vertical"
        android:background="@mipmap/icon_series"
        android:layout_marginLeft="20dp"
        android:visibility="invisible" />

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="2.25dp"
        android:id="@+id/progressBar1"
        android:layout_gravity="left|top"
        android:layout_marginLeft="154.5dp"
        android:layout_marginRight="15dp"
        android:visibility="visible"
        android:indeterminate="false"
        android:background="@drawable/progress_bg"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="45"
        android:progressDrawable="@drawable/progressbar_color"
        android:layout_marginTop="52.75dp" />

</FrameLayout>