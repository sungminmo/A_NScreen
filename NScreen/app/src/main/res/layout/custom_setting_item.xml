<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_item_selector">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60">
        <ImageView
            android:id="@+id/setting_item_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_16"
            android:src="@mipmap/btn_age_15"/>
        <TextView
            android:id="@+id/setting_item_title"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left|center_vertical" />
        <LinearLayout
            android:id="@+id/setting_item_title_sub_layout"
            android:orientation="horizontal"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="match_parent"
            android:layout_weight="0.8">
            <TextView
                android:id="@+id/setting_item_title_sub1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="right|center_vertical" />
            <TextView
                android:id="@+id/setting_item_title_sub2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="left|center_vertical" />
        </LinearLayout>
        <ImageView
            android:id="@+id/setting_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_16"
            android:src="@mipmap/btn_list_arrow"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_alignParentBottom="true"
        android:background="@color/setting_item_selector"/>
</LinearLayout>

