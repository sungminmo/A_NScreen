<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="82.75dp"
    android:layout_height="137.75dp">


    <ImageView
        android:layout_width="82.75dp"
        android:layout_height="120.5dp"
        android:id="@+id/imageView5"
        android:layout_marginTop="1dp"
        android:background="#0000" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/volleyImageView"
        android:layout_width="82.75dp"
        android:layout_height="120.5dp"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/vod_main_textview_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="전국 노래자랑 광진구편 초대가수 임석원 사회 송해"
        android:textSize="11.5sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:lines="1"
        android:autoText="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="124dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridview_vod_main_ranking_imageview"
        android:layout_gravity="left|top"
        android:background="@mipmap/icon_rank"
        android:layout_marginLeft="0.5dp" />

    <TextView
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/gridview_vod_main_ranking_textview"
        android:textSize="11.5sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridview_vod_main_promotionsticker_imageview"
        android:layout_gravity="right|top"
        android:layout_marginRight="2.25dp"
        android:layout_marginTop="3.25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridview_vod_main_tvonly_imageview"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="2.25dp"
        android:layout_marginBottom="19.5dp"
        android:background="@mipmap/icon_onlytv"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridview_vod_main_19_imageview"
        android:layout_gravity="center_horizontal|top"
        android:background="@mipmap/icon_19"
        android:visibility="invisible" />

</FrameLayout>