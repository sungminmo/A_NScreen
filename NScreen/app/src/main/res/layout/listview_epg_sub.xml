<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp">

    <TextView
        android:id="@+id/epg_sub_textview_program_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.25dp"
        android:layout_marginLeft="10.75dp"
        android:layout_gravity="left|top"
        android:text="00:00~00:00"
        android:textSize="12sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/epg_sub_textview_program_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.75dp"
        android:layout_marginLeft="98.75dp"
        android:layout_marginRight="39.5dp"
        android:text="전국 노래자랑 광진구편 초대가수 임석원 사회 송해"
        android:textSize="14.5sp"
        android:textColor="#000000"
        android:lines="1"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/epg_sub_imageview_program_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="98.75dp"
        android:background="@mipmap/btn_age_all" />

    <ImageView
        android:id="@+id/epg_sub_imageview_program_hdsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="127.25dp"
        android:background="@mipmap/btn_size_hd" />

    <ImageView
        android:id="@+id/epg_sub_imageview_progress_bg"
        android:layout_width="fill_parent"
        android:layout_height="2.25dp"
        android:background="@drawable/progress_bg"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="39.5dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="9.75dp" />

    <ImageView
        android:id="@+id/epg_sub_imageview_progress_curent"
        android:layout_width="fill_parent"
        android:layout_height="2.25dp"
        android:layout_marginLeft="96dp"
        android:layout_marginBottom="9.75dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/progress_bar"
        android:layout_gravity="right|bottom" />

</FrameLayout>
