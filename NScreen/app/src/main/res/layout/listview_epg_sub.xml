<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="58dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00~00:00"
        android:id="@+id/epg_sub_textview_program_time"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="전국 노래자랑 광진구편 초대가수 임석원 사회 송해"
        android:id="@+id/epg_sub_textview_program_title"
        android:textSize="14.5sp"
        android:textColor="#000000"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8.75dp"
        android:layout_marginRight="30dp"
        android:ellipsize="end"
        android:lines="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/epg_sub_imageview_program_age"
        android:background="@mipmap/btn_age_all"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="29dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/epg_sub_imageview_program_hdsd"
        android:background="@mipmap/btn_size_hd"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="29dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2.25dp"
        android:id="@+id/epg_sub_imageview_progress_bg"
        android:background="@drawable/progress_bg"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="9.75dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2.25dp"
        android:id="@+id/epg_sub_imageview_progress_curent"
        android:background="@drawable/progress_bar"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="200dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="9.75dp" />

</FrameLayout>
