<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="56.25dp"
        android:background="@mipmap/title_bar_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:text="검색"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:background="@mipmap/btn_back" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/frameLayout"
        android:layout_toEndOf="@+id/frameLayout"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="174dp"
            android:layout_height="30.25dp"
            android:layout_marginTop="9.75dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_selector"
            android:text="VOD 명 검색"
            android:textColor="@drawable/btn_selector_textcolor"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="174dp"
            android:layout_height="30.25dp"
            android:layout_marginTop="9.75dp"
            android:background="@drawable/btn_selector"
            android:text="프로그램 명 검색"
            android:textColor="@drawable/btn_selector_textcolor"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="-1dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/search_main_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>