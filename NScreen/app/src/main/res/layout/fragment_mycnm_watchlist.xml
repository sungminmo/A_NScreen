<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/purchasecount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_31.75"
        android:gravity="center"
        android:textColor="@color/search_programtext_violet" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorc5c5c5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/purchaselistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:background="@color/white" />

        <TextView
            android:id="@+id/purchase_empty_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="시청한 VOD가 없습니다."
            android:textSize="16.25sp"
            android:textColor="@color/color7b5aa3"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>
