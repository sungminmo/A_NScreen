<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stvn.nscreen.epg.EpgMainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="56.25dp"
        android:background="@mipmap/title_bar_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:text="채널 가이드"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/epg_main_backBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_back"
            android:background="@color/transparent" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/frameLayout"
        android:layout_toEndOf="@+id/frameLayout">

        <ImageButton
            android:id="@+id/epg_main_genre_choice_imageButton"
            android:layout_width="fill_parent"
            android:layout_height="40.75dp"
            android:layout_marginLeft="12.25dp"
            android:layout_marginRight="12.25dp"
            android:background="@mipmap/btn_nor"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/epg_main_genre_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체채널"
            android:textSize="14.5sp"
            android:textColor="@color/violet"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="25.25dp"
            android:background="@mipmap/ch_box_arrow" />

    </FrameLayout>

    <ListView
        android:id="@+id/epg_main_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
