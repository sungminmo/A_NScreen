<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@color/white">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="49.75dp"
            android:background="@color/violet">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/vod_detail_topmenu_left_imagebutton"
                android:src="@mipmap/btn_back"
                android:background="@color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/vod_detail_title"
                android:id="@+id/textView"
                android:textSize="16.25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/vod_fragment_topmenu_right_imagebutton"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:visibility="invisible" />


        </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="185.25dp">

        <FrameLayout
            android:layout_width="124.75dp"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="112dp"
                android:layout_height="163dp"
                android:id="@+id/vod_detail_imagefilename_imageview"
                android:background="#bbbbbb"
                android:layout_marginLeft="12.75dp"
                android:layout_marginTop="13.75dp"
                android:layout_gravity="right|top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView14"
                android:layout_gravity="right|top"
                android:layout_marginTop="16.75dp"
                android:layout_marginRight="2.75dp" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.75dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_rating_imageview"
                    android:src="@mipmap/btn_age_all"
                    android:layout_marginLeft="11.25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:id="@+id/vod_detail_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="7.25dp"
                    android:singleLine="true"
                    android:layout_marginRight="12.75dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.5dp"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:text="평 가"
                    android:id="@+id/textView9"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#9a9a9a"
                    android:singleLine="true"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_review1"
                    android:src="@mipmap/series_star_off"
                    android:layout_marginRight="0.25dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_review2"
                    android:src="@mipmap/series_star_off"
                    android:layout_marginRight="0.25dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_review3"
                    android:src="@mipmap/series_star_off"
                    android:layout_marginRight="0.25dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_review4"
                    android:src="@mipmap/series_star_off"
                    android:layout_marginRight="0.25dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_review5"
                    android:src="@mipmap/series_star_off"
                    android:layout_marginRight="0.25dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.75dp"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:text="가 격"
                    android:id="@+id/textView8"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#9a9a9a"
                    android:singleLine="true"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_hd"
                    android:src="@mipmap/btn_size_hd"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="원 [부가세 별도]"
                    android:id="@+id/vod_detail_price_textview"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.75dp"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:text="개 요"
                    android:id="@+id/textView11"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#9a9a9a"
                    android:singleLine="true"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="genre / time"
                    android:id="@+id/vod_detail_genre_textview"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_marginRight="12.75dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.75dp"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:text="감 독"
                    android:id="@+id/textView13"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#9a9a9a"
                    android:singleLine="true"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="director"
                    android:id="@+id/vod_detail_director_textview"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_marginRight="12.75dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.75dp"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:text="출 연"
                    android:id="@+id/textView15"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#9a9a9a"
                    android:singleLine="true"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="starring"
                    android:id="@+id/vod_detail_starring_textview"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_marginRight="12.75dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.75dp"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="60.75dp"
                    android:layout_height="wrap_content"
                    android:text="시청기간"
                    android:id="@+id/textView10"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#9a9a9a"
                    android:singleLine="true"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="viewable"
                    android:id="@+id/vod_detail_viewable_textview"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_marginRight="12.75dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.75dp"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="60.75dp"
                    android:layout_height="wrap_content"
                    android:text="시청기기"
                    android:id="@+id/textView12"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#9a9a9a"
                    android:singleLine="true"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_device_imageview"
                    android:src="@mipmap/icon_tv"
                    android:layout_marginRight="3dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vod_detail_device_mobile_imageview"
                    android:src="@mipmap/icon_mobile"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#b4b6b8"
        android:layout_marginLeft="12.75dp"
        android:layout_marginRight="12.75dp" />

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="373.25dp"
        android:id="@+id/vod_detail_synopsis_scrollView"
        android:layout_marginLeft="12.75dp"
        android:layout_marginTop="8.75dp"
        android:layout_marginRight="12.75dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="synopsis"
            android:id="@+id/vod_detail_synopsis_textview"
            android:textSize="11.75sp"
            android:textColor="@color/black" />

    </ScrollView>


    </LinearLayout>
</ScrollView>


</LinearLayout>
