<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48.75dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vod_main_other_caterory_list_depth1_imageview"
        android:layout_gravity="center_vertical|right"
        android:src="@mipmap/depth1_focus"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-6dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vod_main_other_caterory_list_depth2_imageview"
        android:layout_gravity="center_vertical|right"
        android:src="@mipmap/depth2_focus"
        android:layout_marginLeft="43.75dp"
        android:layout_marginTop="-6dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/vod_main_other_categoty_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.5dp"
        android:textSize="13.75sp"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="AAAA" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vod_main_other_categoty_list_imageview1"
        android:layout_gravity="center_vertical|right"
        android:src="@mipmap/depth2_arrow"
        android:layout_marginRight="54.25dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vod_main_other_categoty_list_imageview2"
        android:layout_gravity="center_vertical|right"
        android:src="@mipmap/depth1_arrow"
        android:layout_marginRight="30.25dp"
        android:visibility="gone" />



</LinearLayout>
