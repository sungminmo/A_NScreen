<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/setting_region_top_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="현재설정지역 : "
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/setting_region_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/text_area_color" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        android:layout_weight="1"
        android:id="@+id/setting_region_listview"
        android:divider="@color/setting_list_divider"
        android:dividerHeight="1px"
        android:listSelector="@drawable/setting_item_selector"
        android:cacheColorHint="@color/transparent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:padding="@dimen/dimen_10">
        <Button
            android:id="@+id/setting_region_cancel"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_40"
            android:layout_weight="1"
            android:text="변경취소"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/btn_cancel_color_selector" />
        <View
            android:layout_width="@dimen/dimen_8"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/setting_region_complete"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_40"
            android:layout_weight="1"
            android:text="변경완료"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/btn_ok_color_selector" />
    </LinearLayout>
</LinearLayout>